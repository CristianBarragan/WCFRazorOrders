@model WebApplicationOrders.Models.SalesView

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Sales", FormMethod.Post))
{
    @Html.DropDownListFor(model => model.ProductId, new SelectList(Model.ActionList, "Value", "Text"), new { @class = "form-control" })

    <input type="submit" name="Get" value="Index" />

    if (@Model.Orders != null)
    {
        <table border="2" cellpadding="2" cellspacing="2">
            <tr>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Date</th>
                <th>Total Units</th>
                <th>Total</th>
            </tr>
            <tr>
                @foreach (var item in Model.Orders)
                {
		            <td>@item.CustomerName</td>
                    <td>@item.ProductName</td>
                    <td>@item.Date</td>
                    <td>@item.TotalUnits</td>
                    <td>@item.Total</td>
                }
            </tr>
        </table>
    
    }
}