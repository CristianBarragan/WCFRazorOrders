@model IEnumerable<WebApplicationOrders.Data.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<input type="button" onclick="showPopup" value="click to show pop up" />
<div id="divcontaiPopup" class="table-responsive" style="display:none">
    @if (@Model != null)
    {   
        <div>
            <table class="table table-striped table-hover3">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Quantity</th>
                </tr>
                @foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                    </tr>
                }
            </table>
        </div>
    }
</div>

<script type="text/javascript">
    function showPopup() {
        $("divcontaiPopup").dialog({
            height: 400,
            width: 500,
            modal: true,
            buttons: {
                "OK": function() {
                    $(this).dialog("close");
                    alert('you selected ok!')
                },
                "Cancel": function() {
                    $(this).dialog("close");
                }
            }
        });
    }
</script>
